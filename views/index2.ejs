  </head>
  
  <header class="page-header">
    <h1><img class="logo" src="logo.png" alt="しろたん"><h1>
  </header>

  <body>
    <h2>Welcome to <%= login.name %>.</h2>
    <form>
      <select id="selected_url">
        <% for(var i in collection) { %>
        <option value="<%= collection[i].attributes.video %>">
       <%= collection[i].attributes.id + '.' + collection[i].attributes.name %>
       </option>
       <% } %> 
      </select>
      <input  id="button_test" type="button" value="動画を選択" />  
    </form>

