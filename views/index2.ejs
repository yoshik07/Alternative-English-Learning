      <iframe id="youtube" width="560" src="https://www.youtube.com/embed/tihmQmPqSdM" height="315"  frameborder="0"
        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <br/>
        <br/>
        <form method="post" action="/" name="answer_form">
        <textarea id="your_answer" name="<%= textarea %>" 
         placeholder="Write you answer here." ></textarea>
        <br/>
        <br/>
        <input type="button" onclick="submit();" id="submit_01" value="SUBMIT">  
      </form>      
  


  <script>
      var test = document.getElementById("button_test")
      console.log(test)
      test.addEventListener("click", function(){
        var selected_url = document.getElementById("selected_url").value;
        console.log(selected_url);
        document.getElementById("youtube").src = selected_url;
        document.getElementById("your_answer").name = selected_url;
      }, false)
    </script>



    

